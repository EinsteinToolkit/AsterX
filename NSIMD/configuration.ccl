# Configuration definitions for thorn NSIMD

PROVIDES NSIMD
{
  SCRIPT configure.sh
  LANG bash
  # NSIMD_DIR: directory where NSIMD is installed
  # NSIMD_ARCH: architecture, e.g. "x86_64"
  # NSIMD_OPTIONS: space-separated list of options, e.g. "AVX2 FMA".
  #     Options are translated into #defines, e.g." -DNSIMD_AVX2".
  OPTIONS NSIMD_DIR NSIMD_ARCH NSIMD_OPTIONS
}
