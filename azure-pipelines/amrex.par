ActiveThorns = "
    AMReX
    IOUtil
    WaveToyAMReX
"
 
$nlevels = 3
$ncells = 128

Cactus::cctk_show_schedule = no

Cactus::cctk_itlast = $ncells * 2 ** ($nlevels - 1) * 2

AMReX::ncells_x = $ncells
AMReX::ncells_y = $ncells
AMReX::ncells_z = $ncells

AMReX::max_num_levels = $nlevels

AMReX::dtfac = 0.5

IO::out_dir = "wavetoy"
IO::out_every = $ncells * 2 ** ($nlevels - 1) / 2
